<p>
<%= link_to 'Back', topics_path, :class=> 'btn btn-sm btn-default'%>
</p>
<p>
  <strong><%= Tag.find_by_id(@topic.tag).name %><%= @topic.title %></strong>
</p>
<p>
  by <%= User.find_by_id(@topic.user_id).email %> 
  created <%= time_ago_in_words(@topic.created_at) %> ago
</p>

<p>
  <strong>Content:</strong>
  </br>
  <%= @topic.content %>
</p>

<%= link_to 'Edit', edit_topic_path(@topic), :class=> 'btn btn-xs btn-default'%>
<%= link_to 'Delete', @topic, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger'%>

<hr/> 

<%= render :partial => 'comment', :collection => @topic.comments %>

<%= form_for(@comment) do |f| %>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :topic_id %>

  <div class="field">
    <%= f.label "Comment" %><br>
    <%= f.text_area :body, :class => "form-control", :rows => "5"%>
  </div>
  <div class="actions">
  <%= f.submit "Create Topic", class: "btn btn-sm btn-success" %>
  </div>
<% end %>


