<%= form_for(@topic) do |f| %>

<%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
<div class="field">
  <%= f.label :Tag %><br>
  <%= f.collection_select :tag_id, Tag.all, :id, :name, { selected: @topic.tag_id }, multiple: false, :class => "form-control" %>
</div>
  <p class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, :class => "form-control", :rows => "5"%>
  </p>
  <p>
  <%= f.submit "Create Topic", class: "btn btn-sm btn-success" %>
  </p>
<% end %>
