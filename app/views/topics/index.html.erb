<h1>Forum</h1>

<table <table class="table table-hover table table-striped">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Title</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
    <%= link_to topic do %>
      <tr data-link="<%= topic_path(topic) %>">
        <td>
          <% if topic.tag_id == 2 %>
          <span class = "label label-danger">
          <% elsif topic.tag_id == 3 %>
          <span class = "label label-info">
          <% elsif topic.tag_id == 4 %>
          <span class = "label label-success">
          <%end%>
          <%= Tag.find_by_id(topic.tag).name%></span>
        </td>
        <td><%= topic.title %></td>
        <td><%= time_ago_in_words(topic.created_at) %> ago</td>
      </tr>
      <% end%>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Topic', new_topic_path, class: "btn btn-sm btn-success " %></p>
