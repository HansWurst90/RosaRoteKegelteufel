<p>
<%= link_to 'Back', events_path, :class=> 'btn btn-sm btn-default'%>
</p>

<h2><%= @event.title %></h2>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time.strftime("%d/%m/%Y %H:%M") %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time.strftime("%d/%m/%Y %H:%M") %>
</p>
<div  class = "btn-group">
<%= link_to 'Edit', edit_event_path(@event), :class=> 'btn btn-xs btn-default'%>
<%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger'%>
</div>
